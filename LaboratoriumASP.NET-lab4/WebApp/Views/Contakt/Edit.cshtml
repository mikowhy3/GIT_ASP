@model ContactModel

@{
    ViewBag.Title = "Edytuj kontakt";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Edytuj kontakt</h2>
    
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">Imię</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Nazwisko</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="phoneNumber" class="form-label">Numer telefonu</label>
            <input asp-for="phoneNumber" class="form-control" placeholder="XXX XXX XXX" />
            <span asp-validation-for="phoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Birthday" class="form-label">Data urodzenia</label>
            <input asp-for="Birthday" class="form-control" type="date" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
